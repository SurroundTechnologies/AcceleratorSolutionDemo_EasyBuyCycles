<logonBase:AB_LogonBase x:Class="WPF.EasyBuyCycles.Logon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:logonBase="clr-namespace:A4DN.Core.WPF.LogonBase;assembly=A4DN.Core.WPF.LogonBase"
    xmlns:systemSharedProperties="clr-namespace:BOS.EasyBuyCycles.Shared.Properties;assembly=BOS.EasyBuyCycles.Shared"
    Title="{x:Static systemSharedProperties:DescriptionResource.LOGONTITLETEXT}" ap_ContentHorizontalAlignment="Left">
    <Grid>    
    
      <StackPanel Orientation="Horizontal">
            <Image Height="70" Width="70"  Source="/WPF.EasyBuyCycles.Shared;component/images/MyApplicationSquare_256_256_32.png"/>
            <TextBlock Text="{x:Static systemSharedProperties:DescriptionResource.LOGONSYSTEMNAME}" Margin="5,0,0,0" FontSize="24" VerticalAlignment="Center" Foreground="{DynamicResource AB_LogonTextBrush}"/>
      </StackPanel>     
  
    </Grid>
</logonBase:AB_LogonBase>