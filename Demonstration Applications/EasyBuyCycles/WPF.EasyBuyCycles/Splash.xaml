<base:AB_SplashWindow x:Class="WPF.EasyBuyCycles.Splash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:A4DN.Core.WPF.Base;assembly=A4DN.Core.WPF.Base" 
    xmlns:systemSharedProperties="clr-namespace:BOS.EasyBuyCycles.Shared.Properties;assembly=BOS.EasyBuyCycles.Shared"
    x:Name="SplashWindow" Title="{Binding Path=ap_SystemName, ElementName=SplashWindow}">
     <base:AB_SplashWindow.ap_CompanyLogo>
        <Image Source="/WPF.EasyBuyCycles.Shared;component/images/Logo-MyCompany_256_256_32.png" />
    </base:AB_SplashWindow.ap_CompanyLogo>
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Image Height="100" Width="100"  Source="/WPF.EasyBuyCycles.Shared;component/images/MyApplicationSquare_256_256_32.png"/>
            <TextBlock Text="{Binding Path=ap_SystemName, ElementName=SplashWindow}" Margin="5,0,0,0" FontSize="28" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</base:AB_SplashWindow>